#include <iostream>
using namespace std;

int main() 
 {
    float subject1, subject2, subject3, subject4;
    float totalGradePoints, cgpa;

    // Input grades for 4 subjects
    cout << "Enter the grade points for 4 subjects: " << endl;
    cout << "Subject 1: ";
    cin >> subject1;
    cout << "Subject 2: ";
    cin >> subject2;
    cout << "Subject 3: ";
    cin >> subject3;
    cout << "Subject 4: ";
    cin >> subject4;

  
    totalGradePoints = subject1 + subject2 + subject3 + subject4;

   
    cgpa = totalGradePoints / 4.0;

    
    cout << "Your CGPA is: " << cgpa;

    return 0;
}
